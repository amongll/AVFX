<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="tv.danmaku.ijk.media.sample.activities.TestMltActivity"
    android:id="@+id/activity_test_mlt">

    <TextView android:text="progress:%0" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/processStatusTextView"
        android:singleLine="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/mediaSelectText"
        android:layout_alignRight="@+id/mediaSelectText"
        android:layout_alignEnd="@+id/mediaSelectText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start_test"
        android:id="@+id/start_button"
        android:onClick="onClickStartTest"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stop_test"
        android:id="@+id/stop_button"
        android:onClick="onClickStopTest"
        android:layout_alignTop="@+id/start_button"
        android:layout_toRightOf="@+id/start_button"
        android:layout_toEndOf="@+id/start_button" />

    <SurfaceView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/surfaceView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/processStatusTextView"
        android:layout_alignRight="@+id/processStatusTextView"
        android:layout_alignEnd="@+id/processStatusTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="select media file"
        android:id="@+id/mediaSelectText"
        android:editable="false"
        android:longClickable="true"
        android:layout_above="@+id/start_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
